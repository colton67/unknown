    <h1>Login with TikTok</h1>
    <a id="tiktok-login" href="#">Login with TikTok</a>

    <script>
        const CLIENT_KEY = "your_client_key"; // Replace with your TikTok Client Key
        const REDIRECT_URI = "https://yourwebsite.com/auth"; // Replace with your Redirect URL

        document.getElementById("tiktok-login").href = 
            `https://www.tiktok.com/auth/authorize/?client_key=${CLIENT_KEY}&response_type=code&scope=user.info.basic&redirect_uri=${encodeURIComponent(REDIRECT_URI)}`;
    </script>

